{{define "base"}}
<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="utf-8">
		<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

		<link rel="stylesheet" href="/ui/node_modules/bootstrap/dist/css/bootstrap.min.css">
    	<link rel="stylesheet" href="/ui/node_modules/font-awesome/css/font-awesome.min.css">
		<link rel="stylesheet" href="/ui/static/css/style.css">
		<title>{{template "title" .}}</title>
	</head>

	<body>
		
		<header class="jumbotron">
			{{block "navbar" .}}
			<nav class="navbar navbar-expand-lg">
				<div class="container-fluid">
					<div id="logo">
						<h1><a href="#">watchess<span>.org</span></a></h1>
					</div>
					<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
					<span class="navbar-toggler-icon"></span>
				</button>
				<div class="collapse navbar-collapse" id="navbarSupportedContent">
					<ul class="navbar-nav ms-auto mb-2 mb-lg-0">
						<li>
							<form class="d-flex">
								<input id="searchbox" class="form-control" type="text" name="search" placeholder="Search"/>
								<input type="submit" class="d-none"/>
							</form>
						</li>
						<li class="nav-item">
							<a class="nav-link adminlogin" href="">Admin Login</a>
						</li>
					</ul>
				</div>
			  </div>
			</nav>
			{{end}}
		</header>
		{{template "body" .}}
		{{block "footer" .}}
		{{end}}

    	<script src="/ui/node_modules/bootstrap/dist/js/bootstrap.min.js"></script>
	</body>
</html>
{{end}}
